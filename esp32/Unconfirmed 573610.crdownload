[env:esp32thing]
platform = espressif32
board = esp32thing
framework = arduino
monitor_baud = 115200
monitor_speed = 115200
lib_deps = 
	lemmingdev/ESP32-BLE-Gamepad@^0.5.5
	mbed-syundo0730/I2Cdev@0.0.0+sha.3aa973ebe3e5
	electroniccats/MPU6050@^1.3.1